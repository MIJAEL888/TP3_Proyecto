@using ClinicaUtil
@model ClinicaMVC.Models.SolicitudViewModel

@if (Model.Camas.Count > 0)
{
    <div class="form-group">
        <label>Seleccione la cama que sera asignada: </label>
        @Html.DropDownListFor(model => model.idCama, new SelectList(Model.Camas, "Id", "Descripcion"), "-- Seleccione la Cama --", new {@class = "form-control"})
    </div>
}
else
{
    <p>Lo sentimos no existen camas disponibles...</p>
}
