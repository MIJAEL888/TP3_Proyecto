@model ClinicaMVC.Models.DiagnosticoGravedadViewModel

<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Paciente: </dt>
            <dd>@Model.IngresoSalidaPaciente.Solicitud.HistoriaClinica.Paciente.Nombre</dd>
            <dt>Grupo Sangineo: </dt>
            <dd>@Model.IngresoSalidaPaciente.Solicitud.HistoriaClinica.GrupoSangineo</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Diagnostico: </dt>
            <dd>@Model.IngresoSalidaPaciente.Solicitud.HistoriaClinica.Diagnostico.Nombre </dd>
            <dt>Tratamiento: </dt>
            <dd>@Model.IngresoSalidaPaciente.Solicitud.HistoriaClinica.Tratamiento.Nombre</dd>
        </dl>
    </div>
</div>
<div class="row margin-bottom">
    <div class="col-md-12">
        <form id="formDiagnosticoGravedad" class="form-horizontal">
            @Html.HiddenFor(m => m.IdIngresoSalidaPaciente)
            <fieldset>
                <legend>Generar Diagnostico:</legend>
                <div class="form-group">
                    @Html.LabelFor(m => m.IdNivelCriticidad, "Nivel de criticidad:", new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.IdNivelCriticidad, new SelectList(Model.NivelCriticidades, "Id", "Nombre"), "-- Seleccionar --", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Observacion, "Observacion :", new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextAreaFor(m => m.Observacion, new { placeholder = "Observacion del diagnostico", @class = "form-control" })
                    </div>
                </div>
                <a href="#" class="btn btn-primary pull-right" onclick="EnviarFormDiagnstico()">Actualizar</a>
            </fieldset>
        </form>
    </div>
</div>
<div class="row margin-bottom">
    <div class="col-md-12">
        <fieldset>
            <legend>Actualizar graficos:</legend>
            <div class="input-group input-group-sm col-sm-6">
                <input type="text" class="form-control" placeholder="Numero de registros" numeric id="cantidadRegistros">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default btn-flat" onclick="ActualizarChart(event)">Actualizar</button>
                </span>
            </div>
        </fieldset>
    </div>
</div>