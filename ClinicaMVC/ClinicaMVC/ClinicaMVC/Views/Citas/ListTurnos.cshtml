@using ClinicaMVC.Entities.Models
@model ClinicaMVC.Models.OutListaTurnosModel

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Doctor</th>
            <th>Consultorio</th>
            <th>Estado</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Turnos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FechaInicio.ToString("MM/dd/yyyy")</td>
                <td>@item.FechaInicio.ToString("HH:mm")</td>
                <td>@item.Doctor.Nombre</td>
                <td>@item.Sala.Codigo</td>
                <td>@item.EstadoTurno</td>
                <td>
                    @if (item.EstadoTurno == EstadoTurno.Libre)
                    {
                        <a href="#" onclick="reservarCita(@item.Id)"
                           class="btn btn-success btn-sm">Reservar</a>
                    }
                </td>
            </tr>

        }
    </tbody>
</table> 